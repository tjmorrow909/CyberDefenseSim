#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run linting
echo "ğŸ“ Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint failed. Please fix the issues before committing."
  exit 1
fi

# Run Prettier check
echo "ğŸ¨ Checking code formatting..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "âŒ Code formatting issues found. Run 'npm run format' to fix them."
  exit 1
fi

# Run TypeScript check
echo "ğŸ”§ Running TypeScript check..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript errors found. Please fix them before committing."
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
npm run test
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix them before committing."
  exit 1
fi

# Security audit
echo "ğŸ”’ Running security audit..."
npm audit --audit-level=moderate
if [ $? -ne 0 ]; then
  echo "âš ï¸  Security vulnerabilities found. Please review and fix them."
  # Don't exit on audit failures in development, just warn
fi

echo "âœ… All pre-commit checks passed!"
